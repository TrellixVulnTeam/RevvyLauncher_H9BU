cd `dirname $0`

echo " running revvy.img using qemu "
echo " you can no longer use this shell "

#STARTTMP
#./box-mount

#echo " replacing fstab and ld.so.preload for qemu "

#sudo cp root/etc/fstab.qemu         root/etc/fstab
#sudo cp root/etc/ld.so.preload.qemu root/etc/ld.so.preload


#./box-umount
#ENDTMP

qemu-system-arm -kernel kernel-qemu -dtb versatile-pb.dtb -m 256 -M versatilepb -cpu arm1176 -append "rw console=ttyAMA0 root=/dev/sda2 rootfstype=ext4 loglevel=8 rootwait fsck.repair=yes memtest=1" -drive file=revvy.img,format=raw -nic user,hostfwd=tcp::5522-:22 -no-reboot -nographic
